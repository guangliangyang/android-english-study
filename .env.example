# English Study App Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration (Required for AI transcript generation)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-3.5-turbo

# YouTube API Configuration (Optional - currently using internal API)
YOUTUBE_API_KEY=your_youtube_api_key_here

# AI Transcript Settings
AI_TRANSCRIPT_TIMEOUT=30000
AI_TRANSCRIPT_TEMPERATURE=0.1

# Application Environment
ENVIRONMENT=development
DEBUG_MODE=true

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_DELAY_MS=1000