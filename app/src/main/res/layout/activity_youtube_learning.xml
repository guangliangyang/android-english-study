<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".YouTubeLearningActivity">

    <!-- Header Section (can be hidden) -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YouTube English Learning"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Paste YouTube video URL here"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/urlEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/playButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play Video"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp" />

    <!-- Video Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/currentTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/videoProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/totalTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/fontSizeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_font_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Change Font Size"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/rewindButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_replay_10"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Rewind 10 seconds"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/playPauseButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_play_arrow"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play/Pause"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/forwardButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_forward_10"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Forward 10 seconds"
                android:layout_marginStart="16dp" />

            <ImageButton
                android:id="@+id/loopModeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_sequential"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle Loop/Sequential Mode"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/transcriptScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transcript"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/transcriptText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No transcript available"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textIsSelectable="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>